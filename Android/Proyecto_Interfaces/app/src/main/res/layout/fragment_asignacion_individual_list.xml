<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user"
            android:id="@+id/imagenAdultoMayorAsignacionIndividual"/>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/IdNombreAdultoMayorAsignacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Nombre Adulto Mayor"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/IdVoluntarioFrecuente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingLeft="15dp"
                android:text="Adulto Mayor Frecuente"
                android:textSize="11sp"
                android:paddingTop="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="invisible"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkAsignacion"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>