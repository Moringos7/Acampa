<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentosBarra.AsignacionAdultosMayores.Coordinador.AsignacionIndividual">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenUsuarioAsignacionIndividual"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombreUsuarioAsignacionIndividual"
            android:gravity="center_vertical|center"
            android:text="Nombre de Usuario"
            android:textColor="#000"
            android:textSize="20sp" />
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/busquedaAsignacionIndividual"
            android:queryHint="Adulto Mayor">

        </SearchView>
       <ListView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/listaAdultosMayores">
        </ListView>
        <Button
            android:id="@+id/btnAsignar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#53b029"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Asignar"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</FrameLayout>