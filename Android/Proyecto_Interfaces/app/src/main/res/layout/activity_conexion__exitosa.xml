<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rogzart.proyecto_interfaces.ActivitysConexion.Conexion_Exitosa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="150dp"
        >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:textAlignment="center"
            app:srcCompat="@android:drawable/sym_action_email"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:text="Solicitud enviada exitosamente"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="30sp"
             />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifique su Correo Electronico"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="20sp"
             />

        <Button
            android:id="@+id/btnExito"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Entendido"
            android:layout_gravity="center"
            android:textSize="18sp"
             />
        </LinearLayout>
</android.support.constraint.ConstraintLayout>
