<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="147dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_evento_fecha"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="Fecha" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/list_evento_tipo"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Tipo Evento" />

                    <TextView
                        android:id="@+id/list_evento_Hora"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Hora" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/list_evento_borrar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@android:color/transparent"
                        app:srcCompat="@android:drawable/ic_delete" />
                </LinearLayout>

                <TextView
                    android:id="@+id/list_evento_lugar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Lugar" />

                <TextView
                    android:id="@+id/list_evento_informacion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Informacion" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>