<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentosBarra.Administrar.AU.AdministrarUsuario">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/user" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/AppTheme.FloatingLabel">

                <EditText
                    android:id="@+id/administar_nombre_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:color="#000"
                    android:hint="Nombre"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Apellidos"
                    android:textColor="#A8A8A8"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/AppTheme.FloatingLabel">

                    <EditText
                        android:id="@+id/administar_apellidoP_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:color="#000"
                        android:hint="Paterno"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/AppTheme.FloatingLabel">

                    <EditText
                        android:id="@+id/administar_apellidoM_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:color="#000"
                        android:hint="Materno"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/AppTheme.FloatingLabel">

                <EditText
                    android:id="@+id/administar_correo_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:color="#000"
                    android:hint="Correo"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="30dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BTNReinicio"
                    android:text="Reiniciar Intentos"
                    android:background="#53b029"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>
    </LinearLayout>
</FrameLayout>