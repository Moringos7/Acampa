<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentosBarra.Scouter.AgregarScouter">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrueba"
        android:text="Fecha"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layoutActualizandoScouter"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizando"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LayoutScouter"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Selecciona un Voluntario"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="22sp"
            />
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:orientation="vertical">
            <SearchView
                android:id="@+id/searchScouter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:queryHint="Usuario"/>
            <ListView
                android:id="@+id/lista_scouters"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="15dp">
            </ListView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAsignarScouter"
                android:text="Asignar Permiso"
                android:background="#2D73BF"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>